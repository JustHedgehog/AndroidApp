<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".MainActivity"
    >
    <ImageView
        android:id="@+id/favouriteImage"
        android:layout_width="220dp"
        android:layout_height="110dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="108dp"
        app:layout_constraintBottom_toTopOf="@+id/listImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchImage"
        app:srcCompat="@drawable/love" />

    <ImageView
        android:id="@+id/listImage"
        android:layout_width="220dp"
        android:layout_height="110dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="197dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favouriteImage"
        app:srcCompat="@drawable/list" />

    <ImageView
        android:id="@+id/searchImage"
        android:layout_width="220dp"
        android:layout_height="110dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="108dp"
        app:layout_constraintBottom_toTopOf="@+id/favouriteImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/search" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="371dp"
        android:layout_height="115dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="57dp"
        android:fontFamily="sans-serif-thin"
        android:text="MOLAPP"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="100dp"
        app:layout_constraintBottom_toTopOf="@+id/searchImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>